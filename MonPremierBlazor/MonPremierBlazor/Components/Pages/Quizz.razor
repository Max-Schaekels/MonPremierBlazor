@page "/quizz"
@rendermode InteractiveServer

Votre prénom =  <input type="text" name="txtPrenom" @bind="Prenom" />

@* OnQuizFinished="RecevoirReponse" *@

<h1>Quizz</h1>

@if (!string.IsNullOrEmpty(Prenom))
{
    <DisplayComponent Prenom="@Prenom" OnNouvelleReponse="AjouterReponse" ></DisplayComponent>
    
}

<br />
@if (reponsesQuizz.Any())
{
    <div class="reponses">
        <h3>Vos réponses :</h3>
        <ul>
            @for (int i = 0; i < reponsesQuizz.Count; i++)
            {
                <li>Question @((i + 1)) : @reponsesQuizz[i]</li>
            }
        </ul>
    </div>
}

